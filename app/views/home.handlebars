
<div class="row">
    <div class="col l3"></div>
    <div class="col l6">
      <img src="../img/BurgerMascot.png">
      <h2 id="webTitle">Burger and Buns</h2>
      <h4>A tracking queue of burgers to eat and who ate them</h4>
    </div>
    <div class="col l3"></div>
</div>

<div class="row">
    <div class="col l3"></div>
    <div class="col l6">
      <h3 id="formTitle">Add A Burger</h2>
      <form method="POST" action="/create">
        <textarea type="text" name="burger"></textarea>
        <button type="submit">ADD BURGER</button>
      </form>
    </div>
    <div class="col l3"></div>
</div>

<div class="row">
    <div class="col l5">
      <h3>Burgers to Eat</h3>
      <div class="divider"></div>

      <ul>
        {{#each burgers}}
          <li>
            <p>{{this.id}}. {{this.burger}}</p>
          </li>
        {{/each}}
      </ul>

    </div>

    <div class="col l2">
    </div>

    <div class="col l5">
      <h3>Burgers Eaten</h3>
      <div class="divider"></div>
    </div>

</div>
